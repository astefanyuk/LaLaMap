<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.mariko.map.MapFragmentEx"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mariko.lalamap.MapRootView
        android:id="@+id/mapRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.mariko.lalamap.ViewAnimatedLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/showList"
        android:src="@android:drawable/ic_search_category_default"
        android:elevation="8dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/loader"
        android:padding="10dip"
        android:background="#64000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="64dip"
            android:layout_height="64dip" />

    </RelativeLayout>

</RelativeLayout>
