<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.mariko.map.MapFragmentEx"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mariko.lalamap.MapRootView
        android:id="@+id/mapRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_marginBottom="10dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mariko.lalamap.DestinationList
            android:id="@+id/destinationList"
            android:layout_marginTop="100dip"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/showList"
            android:src="@android:drawable/ic_search_category_default"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <com.mariko.lalamap.MarkerBrowser
        android:id="@+id/markerBrowser"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_width="400dip"
        android:layout_height="match_parent" />


</RelativeLayout>
